<div class="container event-container">
  <% @events.in_groups_of(4, false).each do |group| %>
    <div class="row">
      <% group.each do |event| %>
      <% image = event.nodes[36].nodes.last&.nodes&.first&.text || "01.jpg" %>
      <% title = event.nodes.first.text&.truncate(30) || "Untitled" %>
      <% description = event.nodes.third.text&.truncate(100) || "No description" %>
      <% event_url = event.nodes.second&.nodes&.first || '#' %>
        <div class="col s3">
          <%= render 'event', event: event, image: image, title: title, description: description, event_url: event_url %>
        </div>
        <% end %>
    </div>
  <% end %>
</div>
